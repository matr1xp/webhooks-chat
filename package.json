{
  "name": "chat-interface",
  "version": "1.0.0",
  "description": "Chat interface for n8n webhook integration",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_OPTIONS='--no-deprecation' next dev --turbopack",
    "dev:verbose": "next dev",
    "build": "next build",
    "build:static": "npm run lint && next build",
    "build:static:full": "npm run type-check && npm run lint && next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "serve": "npx serve out -p 3000",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:prepare": "npm run build:static && npm run deploy:optimize",
    "deploy:optimize": "npm run deploy:compress && npm run deploy:validate",
    "deploy:compress": "find out -name '*.html' -exec gzip -9 -k {} \\; && find out -name '*.css' -exec gzip -9 -k {} \\; && find out -name '*.js' -exec gzip -9 -k {} \\;",
    "deploy:validate": "node scripts/validate-build.js",
    "deploy:firebase": "npm run deploy:prepare && node scripts/deploy-firebase-hosting.js",
    "deploy:netlify": "npm run deploy:prepare && node scripts/deploy-netlify.js",
    "deploy:vercel": "npm run deploy:prepare && node scripts/deploy-vercel.js"
  },
  "keywords": [
    "chat",
    "webhook",
    "n8n",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "axios": "1.11.0",
    "clsx": "^2.1.1",
    "firebase": "^12.0.0",
    "lucide-react": "^0.525.0",
    "next": "^15.4.2",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.4.2",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "ts-jest": "^29.4.0"
  }
}

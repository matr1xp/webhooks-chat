# Chat Interface Environment Variables
# Copy this file to .env.local and fill in your values

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Firebase Configuration
# Get these values from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdefghijk

# N8N Webhook Configuration (Legacy - for backward compatibility)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id

# Webhook Security
WEBHOOK_SECRET=your-secure-webhook-secret-key
NEXT_PUBLIC_WEBHOOK_SECRET=your-secure-webhook-secret-key

# Request Timeout Configuration (milliseconds)
TIMEOUT=30000
NEXT_PUBLIC_TIMEOUT=30000

# Cloud Functions URLs (2nd Generation)
# Get these from Firebase Console after deploying functions
NEXT_PUBLIC_WEBHOOK_SEND_URL=https://webhooksend-your-function-url.a.run.app
NEXT_PUBLIC_HEALTH_CHECK_URL=https://healthcheck-your-function-url.a.run.app
NEXT_PUBLIC_TEST_WEBHOOK_URL=https://testwebhook-your-function-url.a.run.app

# Optional: Functions Base URL (if using 1st Gen functions)
NEXT_PUBLIC_FUNCTIONS_BASE_URL=https://your-region-your-project.cloudfunctions.net

# Development/Debug Flags (optional)
DEBUG=false
ANALYZE=false